.community-container {
  min-height: 100vh;
  background: #F7F3EB;
  display: flex;
  flex-direction: column;
  position: relative;
  box-sizing: border-box;
  animation: fadeIn 0.3s;
  overflow-x: hidden;
}

/* 论坛中心顶图区域 */
.forum-top-bg {
  position: relative;
  width: 100vw;
  height: 240rpx;
  overflow: hidden;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 0;
  padding-top: 60rpx;
  margin-top: 0;
}
.forum-bg-img {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 100%;
  object-fit: cover;
  z-index: 1;
}
.forum-bg-gradient {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 100%;
  background: linear-gradient(180deg, rgba(188,164,106,0.92) 0%, rgba(188,164,106,0.55) 60%, rgba(188,164,106,0.00) 100%);
  z-index: 2;
}
.forum-top-icons {
  position: absolute;
  top: 24rpx;
  right: 32rpx;
  display: flex;
  flex-direction: row;
  z-index: 10;
}
.forum-top-icons .nav-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  transition: transform 0.2s;
}
.forum-top-icons .nav-btn:active {
  transform: scale(0.92);
}
.forum-top-icons .nav-icon {
  width: 36rpx;
  height: 36rpx;
}
.forum-top-content {
  position: relative;
  z-index: 3;
  width: 100vw;
  padding: 40rpx 32rpx 0 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.forum-search-bar {
  width: calc(100vw - 64rpx);
  max-width: 600rpx;
  height: 56rpx;
  background: rgba(255,255,255,0.65);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}
.forum-search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 26rpx;
  color: #7c6a4d;
  outline: none;
}
.forum-search-icon {
  font-size: 32rpx;
  color: #bca46a;
}
.forum-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 4rpx 12rpx #bca46a99;
  margin-bottom: 8rpx;
}

/* Tab栏样式 */
.tab-bar-wrap {
  width: 100%;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}
.tab-bar {
  width: 94vw;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 12rpx #bca46a22;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 8rpx 8rpx;
  overflow-x: auto;
}
.tab-item {
  min-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  color: #bca46a99;
  border-radius: 28rpx;
  margin-right: 12rpx;
  font-weight: 500;
  transition: all 0.2s;
  padding: 0 24rpx;
  background: transparent;
}
.tab-item.active {
  background: #BCA46A;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx #bca46a33;
}
.tab-item:last-child {
  margin-right: 0;
}

/* Banner区域 */
.banner-row {
  width: 94vw;
  margin: 0 auto 32rpx auto;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: flex-start;
  border-radius: 32rpx;
  background: #fff;
  box-shadow: 0 4rpx 24rpx #bca46a11;
  padding: 24rpx;
}
.banner-swiper-rect {
  width: 220rpx;
  height: 220rpx;
  border-radius: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #fff;
  box-shadow: 0 4rpx 16rpx #bca46a22;
}
.banner-item-rect {
  width: 220rpx;
  height: 220rpx;
  position: relative;
}
.banner-image-rect {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 24rpx;
  display: block;
}
.banner-gradient-mask {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  border-radius: 24rpx;
  pointer-events: none;
  background: linear-gradient(180deg, rgba(255,255,255,0.00) 60%, rgba(188,164,106,0.18) 100%);
  z-index: 2;
}
.banner-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 32rpx;
  min-width: 0;
}
.banner-slogan-rect {
  font-size: 36rpx;
  font-weight: bold;
  color: #BCA46A;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}
.banner-desc {
  font-size: 26rpx;
  color: #7c6a4d;
  line-height: 1.7;
  word-break: break-all;
  opacity: 0.92;
}
.banner-indicator {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -16rpx;
  margin-bottom: 24rpx;
}
.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #e7d3b0;
  margin: 0 8rpx;
  transition: background 0.2s;
}
.indicator-dot.active {
  background: #BCA46A;
}

/* 帖子列表 */
.post-list {
  padding: 0 24rpx 24rpx 24rpx;
  box-sizing: border-box;
  overflow-x: hidden;
}
.post-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(94,80,67,0.08);
  animation: fadeInUp 0.5s;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}
.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.user-info {
  display: flex;
  align-items: center;
}
.avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.nickname {
  font-size: 28rpx;
  color: #3A3A3A;
  font-weight: 500;
}
.post-time {
  font-size: 24rpx;
  color: #999;
}
.post-image {
  width: 100%;
  height: 36vw;
  max-height: 240rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  object-fit: cover;
  display: block;
}
.post-content {
  margin-bottom: 16rpx;
}
.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #3A3A3A;
  margin-bottom: 8rpx;
  line-height: 1.4;
}
.post-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
.interaction-bar {
  display: flex;
  align-items: center;
  border-top: 2rpx solid #D6CFBF;
  padding-top: 16rpx;
  margin-top: 16rpx;
}
.interaction-btn {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  transition: transform 0.2s;
}
.interaction-btn:active {
  transform: scale(0.92);
}
.interaction-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}
.interaction-btn text {
  font-size: 24rpx;
  color: #999;
}
.interaction-btn.active text {
  color: #BCA46A;
}

/* 动效 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
@keyframes fadeInUp {
  from { 
    opacity: 0;
    transform: translateY(40rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

