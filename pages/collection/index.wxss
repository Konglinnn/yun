page {
  background: #FAF7F2;
}

.collection-header-bg {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 320rpx; /* 高度加大 */
  z-index: 0;
  overflow: hidden;
}
.collection-bg-img {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 320rpx; /* 高度加大 */
  object-fit: cover;
  opacity: 0.7;
  z-index: 1;
}
.collection-bg-gradient {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 320rpx; /* 高度加大 */
  background: linear-gradient(180deg, #BCA46A 0%, rgba(188,164,106,0.00) 100%);
  opacity: 0.92;
  z-index: 2;
}

.collection-container {
  min-height: 100vh;
  background: transparent;
  display: flex;
  flex-direction: column;
  position: relative;
  animation: fadeIn 0.5s;
  z-index: 10;
  padding-top: 60rpx; /* 讓內容下移，避免被大header遮住 */
}

/* 頂部導航欄 */
.nav-bar {
  width: 100vw;
  height: 120rpx; /* 高度加大 */
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  top: 0;
  z-index: 20;
  box-shadow: 0 2rpx 8rpx #bca46a22;
}
.nav-bar-large {
  height: 120rpx; /* 高度加大 */
}
.nav-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #fff3e0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 16rpx;
  box-shadow: 0 2rpx 8rpx #bca46a22;
  transition: transform 0.1s;
}
.nav-btn:active {
  transform: scale(0.92);
}
.nav-icon {
  width: 48rpx;
  height: 48rpx;
}
.nav-title {
  flex: 1;
  text-align: center;
  font-size: 44rpx; /* 字體加大 */
  font-weight: bold;
  color: #7C4A1E;
  letter-spacing: 4rpx;
}

/* 時間軸Tab欄 */
.timeline-tabbar-wrap {
  width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background: #fff;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 2rpx 8rpx #bca46a11;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 11;
  padding-top: 16rpx;
  min-height: 90rpx; /* 高度加大 */
}
.timeline-tabbar-large {
  min-height: 90rpx; /* 高度加大 */
  align-items: stretch;
}
.timeline-vertical {
  width: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-right: 8rpx;
  height: 100%;
}
.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #B05A1E;
  margin-bottom: 0;
  z-index: 2;
  box-shadow: 0 2rpx 8rpx #bca46a33;
}
.timeline-line {
  width: 6rpx;
  flex: 1;
  min-height: 60rpx;
  background: linear-gradient(180deg, #B05A1E 60%, #e7d3b0 100%);
  border-radius: 3rpx;
  margin-top: 0;
  z-index: 1;
}
.timeline-tabbar {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
  height: 100%;
}
.timeline-tab-item {
  display: inline-block;
  min-width: 140rpx;
  padding: 18rpx 40rpx;
  margin-right: 24rpx;
  font-size: 32rpx;
  color: #B05A1E;
  background: #fff;
  border-radius: 32rpx;
  font-weight: 500;
  transition: all 0.2s;
  box-shadow: 0 2rpx 8rpx #bca46a11;
  line-height: 1;
}
.timeline-tab-item-large {
  min-width: 140rpx;
  padding: 18rpx 40rpx;
  font-size: 32rpx;
}
.timeline-tab-item.active {
  background: #B05A1E;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx #bca46a33;
}

/* 卡片列表 */
.card-list {
  flex: 1;
  padding: 24rpx 0 0 0;
  overflow-y: auto;
}

/* 豎線貫穿所有卡片，圓點對齊 */
.timeline-vertical-list {
  position: relative;
  padding-left: 48rpx;
  min-height: 100%;
}
.timeline-vertical-line {
  position: absolute;
  left: 18rpx;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(180deg, #B05A1E 60%, #e7d3b0 100%);
  z-index: 0;
  border-radius: 4rpx;
}
.timeline-vertical-item {
  position: relative;
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}
.timeline-vertical-dot {
  width: 28rpx;
  height: 28rpx;
  background: #B05A1E;
  border-radius: 50%;
  position: absolute;
  left: 8rpx;
  top: 40rpx;
  z-index: 2;
  box-shadow: 0 2rpx 8rpx #bca46a33;
  border: 4rpx solid #fff;
}
.treasure-card {
  width: 84vw;
  min-height: 180rpx;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx #bca46a11;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin: 0 4vw 32rpx 40rpx;
  padding: 24rpx 24rpx 24rpx 24rpx;
  transition: box-shadow 0.2s, transform 0.2s;
  animation: fadeInUp 0.5s;
}
.treasure-card:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 32rpx #bca46a22;
}
.card-cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 24rpx;
  object-fit: cover;
  margin-right: 24rpx;
  background: #bca46a22;
}
.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}
.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #7C4A1E;
  margin-bottom: 8rpx;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.card-desc {
  font-size: 28rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.card-detail-btn {
  align-self: flex-end;
  background: #BCA46A;
  color: #fff;
  font-size: 22rpx;
  border-radius: 18rpx;
  padding: 4rpx 20rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx #bca46a22;
  font-weight: 500;
  margin-top: 8rpx;
  transition: transform 0.1s;
}
.card-detail-btn:active {
  transform: scale(0.95);
}

/* 動效 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx);}
  to { opacity: 1; transform: translateY(0);}
}