.detail-container {
  background: #fff;
  border-radius: 24rpx;
  margin: 32rpx 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 24rpx #e7d3b033;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.detail-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  background: #f9f6f1;
}
.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #7c6a4d;
  margin-bottom: 16rpx;
  text-align: center;
}
.detail-desc {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 40rpx;
  text-align: center;
}
.back-btn {
  background: #c2a875;
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
} 