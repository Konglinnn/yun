/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.home-container {
  min-height: 100vh;
  background: #f7f3e8;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-bottom: 120rpx;
}
.home-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 0 32rpx;
}
.icon-search, .icon-menu, .icon-scan {
  width: 48rpx;
  height: 48rpx;
  color: #b7a98c;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx #e0d8c3;
  margin: 0 8rpx;
}
.platform-title {
  font-family: "STKaiti", serif;
  font-size: 40rpx;
  color: #7c6a4d;
  letter-spacing: 6rpx;
  font-weight: bold;
}
.header-icons {
  display: flex;
  align-items: center;
}
.book-scroll {
  margin: 32rpx 0 0 0;
  white-space: nowrap;
  padding-left: 32rpx;
}
.book-cover {
  width: 320rpx;
  height: 180rpx;
  border-radius: 32rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx #e0d8c3;
  object-fit: cover;
  border: 2rpx solid #e6dfc6;
}
.chapter-nav {
  display: flex;
  align-items: center;
  margin: 32rpx 0 0 0;
  padding: 0 32rpx;
}
.arrow {
  width: 40rpx;
  height: 40rpx;
  color: #b7a98c;
}
.chapter-scroll {
  flex: 1;
  margin: 0 16rpx;
  white-space: nowrap;
}
.chapter-btn {
  border-radius: 24rpx;
  background: #fff;
  color: #7c6a4d;
  font-size: 28rpx;
  margin-right: 16rpx;
  padding: 12rpx 36rpx;
  box-shadow: 0 2rpx 8rpx #e0d8c3;
  border: none;
}
.ai-area {
  width: 100vw;
  height: 100vh;
  position: fixed;
  right: 0;
  bottom: 0;
  pointer-events: none;
}
.ai-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx #e0d8c3;
  background: #fff;
  pointer-events: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ai-icon image {
  width: 80rpx;
  height: 80rpx;
}
.ai-chatbox {
  position: fixed;
  right: 40rpx;
  bottom: 180rpx;
  width: 420rpx;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx #e0d8c3;
  padding: 32rpx 24rpx 24rpx 24rpx;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.chat-bubble {
  background: #f7f3e8;
  border-radius: 24rpx 24rpx 8rpx 24rpx;
  padding: 20rpx 32rpx;
  color: #7c6a4d;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  max-width: 320rpx;
}
.ai-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #e6dfc6;
}
.tab-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 120rpx;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -2rpx 16rpx #e0d8c3;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 99;
}
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #b7a98c;
  font-size: 24rpx;
  border-radius: 24rpx;
  padding: 8rpx 0;
}
.tab-active {
  color: #7c6a4d;
  font-weight: bold;
  background: #f7f3e8;
}
.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.collection-container {
  min-height: 100vh;
  background: #f7f3e8;
  padding-bottom: 120rpx;
  position: relative;
}
.collection-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 0 32rpx;
}
.cloud-bar {
  width: 180rpx;
  height: 48rpx;
}
.filter-btn {
  border-radius: 24rpx;
  background: #fff;
  color: #7c6a4d;
  font-size: 28rpx;
  padding: 8rpx 32rpx;
  box-shadow: 0 2rpx 8rpx #e0d8c3;
  border: none;
}
.collection-scroll {
  margin: 32rpx 0 0 0;
  white-space: nowrap;
  padding-left: 32rpx;
}
.collection-card {
  display: inline-block;
  width: 320rpx;
  border-radius: 32rpx;
  background: #fff;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx #e0d8c3;
  padding: 24rpx;
  vertical-align: top;
}
.collection-img {
  width: 272rpx;
  height: 160rpx;
  border-radius: 24rpx;
  object-fit: cover;
  margin-bottom: 16rpx;
}
.desc {
  color: #7c6a4d;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}
.detail-btn {
  border-radius: 20rpx;
  background: #f7f3e8;
  color: #7c6a4d;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border: none;
}
.detail-modal {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.2);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}
.detail-content {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  width: 520rpx;
  box-shadow: 0 4rpx 24rpx #e0d8c3;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.detail-img {
  width: 320rpx;
  height: 180rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
}
.detail-text {
  color: #7c6a4d;
  font-size: 28rpx;
  margin-bottom: 24rpx;
  text-align: center;
}
.collect-btn, .close-btn {
  border-radius: 20rpx;
  background: #f7f3e8;
  color: #7c6a4d;
  font-size: 24rpx;
  padding: 8rpx 32rpx;
  border: none;
  margin-bottom: 16rpx;
}

.community-container {
  min-height: 100vh;
  background: #f7f3e8;
  padding-bottom: 120rpx;
  position: relative;
}
.community-header {
  display: flex;
  align-items: center;
  padding: 32rpx 32rpx 0 32rpx;
}
.crane {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}
.title {
  font-family: "STKaiti", serif;
  font-size: 40rpx;
  color: #7c6a4d;
  font-weight: bold;
}
.post-scroll {
  margin: 32rpx 0 0 0;
  padding: 0 32rpx;
}
.post-card {
  border-radius: 32rpx;
  background: #fff;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx #e0d8c3;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}
.content {
  color: #7c6a4d;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.post-img {
  width: 100%;
  height: 180rpx;
  border-radius: 24rpx;
  object-fit: cover;
  margin-bottom: 12rpx;
}
.like-btn {
  border-radius: 20rpx;
  background: #f7f3e8;
  color: #7c6a4d;
  font-size: 24rpx;
  padding: 8rpx 32rpx;
  border: none;
  align-self: flex-end;
}
.post-fab {
  position: fixed;
  right: 48rpx;
  bottom: 180rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #fff;
  color: #7c6a4d;
  font-size: 60rpx;
  box-shadow: 0 2rpx 8rpx #e0d8c3;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.profile-container {
  min-height: 100vh;
  background: #f7f3e8;
  padding-bottom: 120rpx;
  position: relative;
}
.profile-header {
  display: flex;
  align-items: center;
  padding: 48rpx 32rpx 0 32rpx;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 2rpx solid #e6dfc6;
  margin-right: 24rpx;
}
.info {
  display: flex;
  flex-direction: column;
}
.nickname {
  font-size: 32rpx;
  color: #7c6a4d;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.level-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}
.exp-bar {
  width: 180rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background: #e6dfc6;
  overflow: hidden;
}
.exp-inner {
  height: 100%;
  background: linear-gradient(90deg, #f9e7b7, #c8bfae);
  border-radius: 8rpx;
}
.badge-section {
  margin: 48rpx 0 0 0;
  padding: 0 32rpx;
}
.badge-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.view-all {
  border-radius: 20rpx;
  background: #f7f3e8;
  color: #7c6a4d;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border: none;
}
.badge-scroll {
  white-space: nowrap;
}
.badge-card {
  display: inline-block;
  width: 120rpx;
  border-radius: 24rpx;
  background: #fff;
  margin-right: 16rpx;
  box-shadow: 0 2rpx 8rpx #e0d8c3;
  padding: 16rpx 0;
  text-align: center;
}
.badge-card image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  margin-bottom: 8rpx;
}
.badge-card text {
  color: #7c6a4d;
  font-size: 22rpx;
}
.message-section {
  margin: 48rpx 32rpx 0 32rpx;
}
.message-input {
  width: 100%;
  border-radius: 24rpx;
  background: #fff;
  color: #7c6a4d;
  font-size: 26rpx;
  padding: 20rpx 32rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx #e0d8c3;
}
