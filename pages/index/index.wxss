.home-container {
  min-height: 100vh;
  background: #FDF8F3;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-bottom: 120rpx;
}

/* 頂部搜索欄 */
.home-header {
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FDF8F3;
  padding: 0 0 0 0;
  margin-top: 24rpx;
  position: relative;
  z-index: 2;
}
.search-bar-wrap {
  display: flex;
  align-items: center;
  width: 80vw;
  height: 64rpx;
  background: #fff;
  border-radius: 32rpx;
  border: 2rpx solid #C2A875;
  box-sizing: border-box;
  padding: 0 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(194,168,117,0.08);
}
.icon-search {
  width: 40rpx;
  height: 40rpx;
  color: #C2A875;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-bar {
  flex: 1;
  height: 56rpx;
  border: none;
  outline: none;
  background: transparent;
  font-size: 28rpx;
  color: #7c6a4d;
}

/* 特效標題 */
.platform-title-effect {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 12rpx;
  margin-bottom: 0;
  position: relative;
  z-index: 2;
}
.platform-title-effect-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #C2A875;
  letter-spacing: 8rpx;
  text-shadow: 0 4rpx 12rpx #e7d3b0, 0 2rpx 8rpx #fff;
  animation: title-glow 2s infinite alternate;
}
@keyframes title-glow {
  0% { text-shadow: 0 4rpx 12rpx #e7d3b0, 0 2rpx 8rpx #fff; }
  100% { text-shadow: 0 8rpx 24rpx #c2a875, 0 4rpx 16rpx #fff; }
}

/* 內容區塊（整體向下移動，圖片輪播在正中） */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中 */
  align-items: center;     /* 水平居中 */
  min-height: 0;
  margin-top: 60rpx;
}

/* 轮播字体区块 */
.title-swiper-area {
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}
.title-deco {
  width: 48rpx;
  height: 48rpx;
  margin: 0 12rpx;
}
.title-swiper {
  width: 320rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}
.title-text {
  font-size: 36rpx;
  color: #7c6a4d;
  font-weight: bold;
  text-align: center;
  width: 320rpx;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  transition: all 0.3s;
  border-radius: 16rpx;
}
.title-text.active {
  color: #fff;
  background: #C2A875;
  box-shadow: 0 4rpx 16rpx #e7d3b0;
  transform: scale(1.08);
}

/* 居中正方形轮播图 */
.swiper-center {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}
.book-swiper {
  width: 80vw;
  height: 80vw;
  max-width: 600px;
  max-height: 600px;
  background: transparent;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(194,168,117,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
}
.book-cover-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: transform 0.32s cubic-bezier(.68,-0.55,.27,1.55);
}
.book-cover-wrapper.active {
  transform: scale(1.08);
  box-shadow: 0 8rpx 32rpx #e7d3b088;
}
.book-cover {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  object-fit: cover;
}

/* 横向滑动章节栏 */
.chapter-scroll {
  width: 100vw;
  white-space: nowrap;
  overflow-x: scroll;
  margin-bottom: 0;
  display: flex;
  justify-content: center;
}
.chapter-btns {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.chapter-btn {
  min-width: 160rpx;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  color: #8B5E3C;
  border: 2rpx solid #C2A875;
  background: transparent;
  margin-right: 16rpx;
  transition: transform 0.18s cubic-bezier(.68,-0.55,.27,1.55);
  white-space: nowrap;
  box-shadow: none;
  outline: none;
  position: relative;
}
.chapter-btn:last-child {
  margin-right: 0;
}
.chapter-btn.active {
  background: #C2A875;
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 16rpx #e7d3b0;
  transform: scale(1.08);
}
.chapter-btn:active {
  transform: scale(0.92);
}

/* AI助手悬浮icon */
.ai-area {
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 9999;
  position: fixed;
  pointer-events: none;
  /* 提升移動流暢度 */
  will-change: transform;
  -webkit-transform: translateZ(0);
}
.ai-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(194,168,117,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
  /* 移除所有transition和動畫 */
  transition: none !important;
}
.ai-icon:active {
  /* 無縮放特效 */
}
.ai-icon image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 12rpx rgba(194,168,117,0.15);
  /* 移除所有transition和動畫 */
  transition: none !important;
}

/* AI助手对话框 */
.ai-chat-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ai-chatbox {
  width: 94vw;
  height: 70vh;
  background: #FDF8F3;
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(194,168,117,0.15);
  position: relative;
}
.ai-chat-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #C2A875;
}
.ai-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.ai-nickname {
  font-size: 32rpx;
  color: #5E3F23;
}
.ai-msg-list {
  flex: 1;
  padding: 24rpx 32rpx 140rpx 24rpx;
  overflow-y: auto;
  height: 100%;
  box-sizing: border-box;
}
.ai-msg-item {
  margin-bottom: 16rpx;
}
.ai-avatar-mini {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}
.chat-bubble {
  display: inline-block;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  background: #fff;
  color: #333;
  font-size: 28rpx;
  max-width: 70vw;
  word-break: break-all;
}
.chat-bubble.ai {
  background: #F5E6C8;
  color: #5E3F23;
}
.chat-bubble.user {
  background: #C2A875;
  color: #fff;
}
.ai-input-bar {
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx 24rpx 24rpx;
  background: #FDF8F3;
  z-index: 2;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
}
.ai-input {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  background: #fff;
  border: 2rpx solid #C2A875;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.ai-send-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #C2A875;
  color: #fff;
  margin-left: 16rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Alibaba PuHuiTi', 'Microsoft YaHei', 'PingFang SC', 'Source Han Sans SC', Arial, sans-serif;
  padding: 0;
  border: none;
  box-sizing: border-box;
  transition: transform 0.18s cubic-bezier(.68,-0.55,.27,1.55);
}
.ai-send-btn:active {
  transform: scale(0.92);
}

/* 互動繪本漸變框新版 */
.interactive-gradient-box {
  width: 90vw;
  height: 200rpx;
  margin: 32rpx auto 0 auto;
  padding: 0;
  background: linear-gradient(90deg, #F9E5C7 0%, #F6C97B 100%);
  border-radius: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  box-shadow: 0 4rpx 24rpx #e7d3b044;
  overflow: hidden;
  position: relative;
}
.interactive-left {
  flex: 0 0 55%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 32rpx 0 32rpx 36rpx;
  z-index: 2;
}
.interactive-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5C4322;
  line-height: 1.3;
  margin-bottom: 24rpx;
  letter-spacing: 2rpx;
}
.interactive-action {
  background: #fff;
  color: #5C4322;
  font-size: 26rpx;
  border-radius: 16rpx;
  padding: 8rpx 32rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx #e7d3b022;
  font-weight: 500;
  margin-top: 0;
  align-self: flex-start;
  margin-left: 0;
}
.interactive-bg {
  flex: 0 0 45%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  pointer-events: none;
  opacity: 0.95;
}

.bottom-cloud-row {
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
  margin-top: 0;
  margin-bottom: 0;
  background: transparent;
}
.bottom-cloud {
  width: 22vw;
  min-width: 80rpx;
  max-width: 200rpx;
  margin: 0 0 16rpx 0;
  pointer-events: none;
  background: transparent;
}
.bottom-cloud.left {
  margin-left: 6vw;
}
.bottom-cloud.right {
  margin-right: 6vw;
}

.bottom-cloud-gradient-bg {
  width: 100vw;
  min-height: 180rpx;
  background: #FDF8F3;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: stretch;
  padding: 0;
  margin: 0;
}
.bottom-cloud.left.higher {
  position: absolute;
  left: 6vw;
  top: -60rpx;
  width: 22vw;
  min-width: 80rpx;
  max-width: 200rpx;
  z-index: 2;
}
.bottom-cloud.right.lower {
  position: absolute;
  right: 6vw;
  bottom: 8rpx;
  width: 22vw;
  min-width: 80rpx;
  max-width: 200rpx;
  z-index: 2;
}
.ai-msg-item.user {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-end;
  align-items: flex-start;
  text-align: right;
  width: 100%;
  padding-right: 0;
}
.chat-bubble.user {
  background: #C2A875;
  color: #fff;
  margin-left: 48rpx;
  margin-right: 0;
  align-self: flex-end;
  border-bottom-right-radius: 4rpx;
  max-width: 70vw;
  min-width: 80rpx;
  text-align: right;
  box-sizing: border-box;
  margin-left: auto;
}
.ai-msg-item.ai {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  text-align: left;
}
.chat-bubble.ai {
  background: #F5E6C8;
  color: #5E3F23;
  margin-right: 0;
  margin-left: 8rpx;
  align-self: flex-start;
}

.collection-header-bg {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 240rpx;
  z-index: 0;
  overflow: hidden;
  pointer-events: none; /* 防止遮擋點擊 */
}
.collection-bg-img {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 240rpx;
  object-fit: cover;
  opacity: 0.7;
  z-index: 1;
}
.collection-bg-gradient {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 240rpx;
  background: linear-gradient(180deg, #BCA46A 0%, rgba(188,164,106,0.00) 100%);
  opacity: 0.92;
  z-index: 2;
}
.collection-container {
  position: relative;
  z-index: 10;
  min-height: 100vh;
  background: transparent; /* 不要設置白色 */
  display: flex;
  flex-direction: column;
  animation: fadeIn 0.5s;
}

/* 彈出動畫 */
@keyframes bubblePopUser {
  0% { transform: scale(0.7) translateX(80rpx); opacity: 0; }
  80% { transform: scale(1.05) translateX(0); opacity: 1; }
  100% { transform: scale(1) translateX(0); opacity: 1; }
}
@keyframes bubblePopAI {
  0% { transform: scale(0.7) translateX(-80rpx); opacity: 0; }
  80% { transform: scale(1.05) translateX(0); opacity: 1; }
  100% { transform: scale(1) translateX(0); opacity: 1; }
}
.ai-msg-item.user {
  animation: bubblePopUser 0.28s cubic-bezier(.68,-0.55,.27,1.55);
}
.ai-msg-item.ai {
  animation: bubblePopAI 0.28s cubic-bezier(.68,-0.55,.27,1.55);
}

.top-bg-effect {
  position: relative;
  width: 100vw;
  padding-top: 24rpx;
  padding-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}
.top-bg-img {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 220rpx;
  z-index: 0;
  object-fit: cover;
  opacity: 0.65;
  pointer-events: none;
}
.top-bg-gradient {
  position: absolute;
  left: 0; top: 0; width: 100vw; height: 220rpx;
  /* 上方透明，下方深色 */
  background: linear-gradient(180deg, rgba(253,248,243,0.05) 0%, #FDF8F3ee 100%);
  z-index: 1;
  pointer-events: none;
}

/* 點擊縮放特效通用類 */
.tap-effect {
  transition: transform 0.18s cubic-bezier(.68,-0.55,.27,1.55);
}
.tap-effect:active {
  transform: scale(0.92);
}